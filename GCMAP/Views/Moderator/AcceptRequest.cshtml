@model GCMAP.ViewModels.AcceptRequestViewModel

@{
    ViewData["Title"] = "Подтвердить заявку";
}

<div class="container">
    <h2 class="special-header" style="padding-bottom:12px">Подтвердите заявку</h2>
    <div class="justify-content-center align-content-center">
        <form method="post" asp-controller="Moderator" asp-action="AcceptRequest">
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12 validation">
                    <div asp-validation-summary="ModelOnly"></div>
                </div>
            </div>
            <input asp-for="Id" hidden="hidden" />
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12">
                    <label asp-for="NickName" class="login-label"></label><br />
                    <input asp-for="NickName" class="form-control" readonly />
                    <span asp-validation-for="NickName"></span>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12">
                    <label asp-for="Description" class="login-label"></label><br />
                    <textarea asp-for="Description" class="form-control" readonly></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12">
                    <label asp-for="Contact" class="login-label"></label><br />
                    <input asp-for="Contact" class="form-control" readonly />
                    <span asp-validation-for="Contact"></span>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12">
                    <a class="btn btn-secondary register-button" asp-controller="Moderator" asp-action="Requests">
                        Назад
                    </a>
                    @if (Model.Photo != null)
                    {
                        <a class="btn btn-success register-button" href="@Model.Photo.Path" target="_blank" rel="noopener noreferrer">
                            Ознакомиться с фото
                        </a>
                    }
                    <button type="submit" class="btn btn-primary register-button">Подтвердить</button>
                </div>
            </div>
        </form>
    </div>
</div>

