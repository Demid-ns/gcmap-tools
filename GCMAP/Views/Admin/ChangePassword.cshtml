@model GCMAP.ViewModels.ChangePasswordViewModel

@{ 
    ViewData["Title"] = "Изменить пароль";
}

<div class="container">
    <div class="col-12 special-header" style="padding-bottom:12px">Изменить пароль для @Model.Email</div>
    <div class="justify-content-center align-content-center">
        <form method="post" asp-controller="Admin" asp-action="ChangePassword">
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12 validation">
                    <div asp-validation-summary="ModelOnly"></div>
                </div>
            </div>
            <input asp-for="Id" hidden="hidden" />
            <input asp-for="Email" hidden="hidden" />
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12">
                    <label asp-for="NewPassword" class="login-label"></label><br />
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword"></span>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12">
                    <a class="btn btn-secondary register-button" asp-controller="Admin" asp-action="Users">
                        Назад
                    </a>
                    <button type="submit" class="btn btn-primary" style="margin-top:10px;">Изменить</button>
                </div>
            </div>
        </form>
    </div>
</div>

