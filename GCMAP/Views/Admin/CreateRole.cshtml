@{
    ViewData["Title"] = "Создать роль";
}

<div class="container">
    <h2 class="special-header" style="padding-bottom:12px">Создайте роль</h2>
    <div class="justify-content-center align-content-center">

        <div asp-validation-summary="All" class="text-danger"></div>

        <form method="post" asp-controller="Admin" asp-action="CreateRole">
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12">
                    <label class="login-label">Название роли</label><br />
                    <input name="name" class="form-control" />
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12">
                    <a class="btn btn-secondary register-button" asp-controller="Admin" asp-action="Roles">
                        Назад
                    </a>
                    <button type="submit" class="btn btn-primary register-button">Создать</button>
                </div>
            </div>
        </form>
    </div>
</div>
