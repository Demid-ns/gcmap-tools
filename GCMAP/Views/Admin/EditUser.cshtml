@model GCMAP.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Изменить пользователя";
}

<div class="container">
    <h2 class="special-header" style="padding-bottom:12px">Измените данные</h2>
    <div class="justify-content-center align-content-center">
        <form method="post" asp-controller="Admin" asp-action="EditUser">
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12 validation">
                    <div asp-validation-summary="ModelOnly"></div>
                </div>
            </div>
            <input asp-for="Id" hidden="hidden" />
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12">
                    <label asp-for="Email" class="login-label"></label><br />
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12">
                    <label asp-for="NickName" class="login-label"></label><br />
                    <input asp-for="NickName" class="form-control" />
                    <span asp-validation-for="NickName"></span>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12">
                    <a class="btn btn-secondary register-button" asp-controller="Admin" asp-action="Users">
                        Назад
                    </a>
                    <button type="submit" class="btn btn-primary register-button">Изменить</button>
                </div>
            </div>
        </form>
    </div>
</div>
