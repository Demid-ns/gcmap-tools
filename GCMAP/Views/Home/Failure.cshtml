@model GCMAP.ViewModels.RequestViewModel

@{
    ViewData["Title"] = "Сообщить о проблеме";
}

<div class="container">
    <h2 class="special-header" style="padding-bottom:12px">Сообщите о проблеме</h2>
    <div class="justify-content-center align-content-center">
        <form method="post" asp-controller="Home" asp-action="Failure" enctype="multipart/form-data">
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12 validation">
                    <div asp-validation-summary="ModelOnly"></div>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12">
                    <label asp-for="NickName" class="login-label"></label><br />
                    <input asp-for="NickName" class="form-control" />
                    <span asp-validation-for="NickName"></span>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12">
                    <label asp-for="Description" class="login-label">
                        Опишите проблему, укажите местоположение и все нужные детали
                    </label><br />
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12">
                    <label asp-for="Contact" class="login-label"></label><br />
                    <input asp-for="Contact" class="form-control" />
                    <span asp-validation-for="Contact"></span>
                </div>
            </div>
            <div class="form-row justify-content-center file-input">
                <div class="col-lg-6 col-12">
                    <div class="custom-file">
                        <input type="file" asp-for="Photo" class="custom-file-input" id="customFile" />
                        <label class="custom-file-label" for="customFile">Скриншот (если требуется)</label>
                    </div>
                    <span asp-validation-for="Photo"></span>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12">
                    <a class="btn btn-secondary register-button" asp-controller="Home" asp-action="Index">
                        Назад
                    </a>
                    <button type="submit" class="btn btn-primary register-button">Подтвердить</button>
                </div>
            </div>
        </form>
    </div>
</div>
