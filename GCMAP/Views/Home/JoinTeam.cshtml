@model GCMAP.ViewModels.RequestViewModel

@{
    ViewData["Title"] = "Присоединиться к команде";
}

<div class="container">
    <h2 class="special-header" style="padding-bottom:12px">Заявка на вступление в команду</h2>
    <div class="justify-content-center align-content-center">
        <form method="post" asp-controller="Home" asp-action="JoinTeam">
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12 validation">
                    <div asp-validation-summary="ModelOnly"></div>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12">
                    <label asp-for="NickName" class="login-label"></label><br />
                    <input asp-for="NickName" class="form-control" />
                    <span asp-validation-for="NickName"></span>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12">
                    <label asp-for="Description" class="login-label">
                        Представьте себя и опишите мотивацию по вступлению в команду
                    </label><br />
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12">
                    <label asp-for="Contact" class="login-label"></label><br />
                    <input asp-for="Contact" class="form-control" />
                    <span asp-validation-for="Contact"></span>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="col-lg-6 col-12">
                    <a class="btn btn-secondary register-button" asp-controller="Home" asp-action="Index">
                        Назад
                    </a>
                    <button type="submit" class="btn btn-primary register-button">Подтвердить</button>
                </div>
            </div>
        </form>
    </div>
</div>